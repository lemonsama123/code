<page-meta root-font-size="system" />
<view class="page" data-weui-theme="{{theme}}" data-weui-mode="{{mode}}">
    <!-- <view class="page__hd">
        <view class="page__title">Grid</view>
        <view class="page__desc">九宫格</view>
