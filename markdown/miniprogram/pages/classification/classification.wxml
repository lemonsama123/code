    <view class="weui-grids">
        <navigator wx:for="{{category}}" wx:key="index" class="weui-grid" aria-role="button" url="../list/list?key={{category[index].name}}">
            <view class="weui-grid__icon">
                <image src="{{item.icon}}"></image>
            </view>
            <view class="weui-grid__label">{{item.name}}</view>
        </navigator>
    </view>
</view>